{% extends '::base.html.twig' %}

{% block navbar2 %}
    {% embed 'navbar2.html.twig' %}
        {% block navbar2_actions %}
            {% if puede_crear %}
                <a href="{{ path('planificaciones_nueva') }}" class="">
                    <i class="fa fa-plus"></i>
                    Nueva planificaci&oacute;n
                </a>
            {% endif %}
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}
    <div class="">
        <div class="">
            <div class="">
                {% include '::notificaciones.html.twig' %}
            </div>

            <div class="shadow">

                {% include 'PlanificacionesBundle:planificacion:form-buscador.html.twig'%}

            </div>

            {% if paginado[0] is defined %}

                <div class="row mt-4">
                    <div class="col-12">

{#                        <div class="bg-light p-4 mb-3 shadow">#}
{#                            Se encontraron <b>{{ paginado.getTotalItemCount }}</b> planificaciones.#}
{#                        </div>#}


                        <div id="accordion" class="acordion">
                            {%for p in paginado %}
                                {% set id = 'collapse' ~ loop.index %}
                                <div class="card mb-1">
                                    <div class="card-header card-header-azul" id="heading{{ loop.index }}">
                                        <h6 class="mb-0 acordeon-header">
                                            <button class="btn btn-link align-middle py-1" data-toggle="collapse" data-target="#{{ id }}" aria-expanded="false" aria-controls="{{ id }}" style="text-decoration: none;">

                                                <span class="text-white font-weight-bold">
                                                    {{ p.getTitulo()|upper }}
                                                </span>
                                                <span class="right centrate-y">
                                                    <span class="badge bg-azul border border-white badge-carrera mr-2 d-none d-md-inline">
                                                        {{ p.getCarreraAbrev() }}
                                                    </span>
                                                    {% set eActual = p.getEstadoActual() %} 
                                                    {% if eActual %}
                                                        {% set class = eActual.getCssClass() %}                                                        

                                                        {#   <a href="#" class="mr-2 modal-historico small text-uppercase badge badge-{{ class }}">#}
                                                        <span class='mr-2 small text-uppercase badge badge-estado badge-{{ class }}' style='cursor:default;'>
                                                            {{ eActual.nombre }}
                                                        </span>
                                                        <i class="fa fa-1x fa-caret-down"></i>
                                                    {% endif %}
                                                </span>
                                            </button>
                                        </h6>
                                    </div>

                                    <div id="{{ id }}" class="collapse" aria-labelledby="heading{{ loop.index }}" data-parent="#accordion">
                                        <div class="card-body bg-light p-5">
                                            {#<h4 class='font-weight-bold text-uppercase h6'>
                                                {{ nom_carrera(p.carrera) ~ ' - Plan ' ~ p.plan }}
                                            </h4>#}

                                            <div class="row">
                                                <div class="col-12">
                                                    <h5 class="font-weight-bold text-uppercase text-primary">                                                        
                                                        {{ p.getTitulo()|upper }}                                                        
                                                    </h5>
                                                    <h6 class="font-weight-bold text-uppercase text-secondary">                                                        
                                                        {{  nom_carrera(p.carrera) }}                                                        
                                                    </h6>
                                                </div>
                                            </div>

                                            <div class="row mt-3">
                                                <div class="col-12 col-sm-6">                                                    
                                                    <p class="mb-1">
                                                        <i class="fa fa-caret-right text-success"></i>&nbsp;<span class='font-weight-bold'>Plan: </span>
                                                        <span class=''>
                                                            {{  p.plan }}
                                                        </span>
                                                    </p>
                                                    <p class="mb-1">
                                                        <i class="fa fa-caret-right text-success"></i>&nbsp;<span class='font-weight-bold'>Docente responsable: </span>
                                                        {% if p.getDocenteResponsable() %}
                                                            {{ p.getDocenteResponsable.getPersona().getApeNom() }}
                                                        {% else %}
                                                            <span class='text-muted'>Sin definir</span>
                                                        {% endif %}
                                                    </p>
                                                    <p>
                                                        <i class="fa fa-caret-right text-success"></i>&nbsp;<span class='font-weight-bold'>Fecha creaci&oacute;n: </span>
                                                        <span class=''>
                                                            {{ p.fechaCreacion()|date('d/m/Y H:i') ~ ' Hs.' }}
                                                        </span>  
                                                    </p>

                                                </div>
                                                <div class="col-12 col-sm-6">
                                                    <p class="mb-1">
                                                        <i class="fa fa-caret-right text-success"></i>&nbsp;<span class='font-weight-bold'>Estado actual: </span>
                                                        <span class=''>{{ p.getEstadoActual() }}</span>              
                                                    </p>
                                                    <p>
                                                        <i class="fa fa-caret-right text-success"></i>&nbsp;<span class='font-weight-bold' title="Fecha última modificación">Fecha ultima modif.: </span>
                                                        <span class=''>
                                                            {{ p.getUltimaModif()|date('d/m/Y H:i') ~ ' Hs.' }}
                                                        </span>              
                                                    </p>                                                    
                                                </div>
                                            </div>

                                            <div class="row mt-4">
                                                <div class="col-12 col-md-10">
                                                    <a href='{{ path('planif_info_basica_editar', {id : p.id})}}' class="btn btn-sm btn-primary">
                                                        <i class="fa fa-edit"></i>
                                                        Ver/Editar
                                                    </a>
                                                    <a href="{{ path('planificaciones_duplicar', {id : p.id})}}" class="btn btn-sm btn-outline-secondary">
                                                        <i class="fa fa-copy"></i>
                                                        Duplicar
                                                    </a>
                                                    <a href="{{ path('planificaciones_imprimir', {id : p.id})}}" class="btn btn-sm btn-outline-secondary">
                                                        <i class="fa fa-print"></i>
                                                        Imprimir                                                    
                                                    </a>
                                                    {# El boton Cambiar Estado es para las planificaciones publicadas que 
                                                    pueden cambiar al estado en Revision, solo tiene permiso SEC ACADeMICA. #}
                                                    {% set ROL_SA = constant('AppBundle\\Entity\\Rol::ROLE_SEC_ACADEMICA') %}

                                                    {% if (p.isPublicada() and app.user.tieneRol(ROL_SA))%}
   
                                                        <a href="{{ path('planificaciones_cambiar_estado', {id : p.id}) }}" class="btn btn-sm btn-outline-secondary">
                                                            <i class="fa fa-clock-o"></i>
                                                            Cambiar estado
                                                        </a>
                                                    {% endif %}
                                                </div>
                                                <div class="col-12 col-md-2 text-right">
                                                    <a href="{{ path('planificaciones_borrar', {id : p.id}) }}" class="btn btn-sm btn-outline-danger">
                                                        <i class="fa fa-trash"></i>
                                                        Eliminar
                                                    </a>
                                                </div>
                                            </div>

                                        </div>

                                    </div>
                                </div>


                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="navigation mt-3 mb-5 centrate-x">
                    {{ knp_pagination_render(paginado) }}
                </div>



            {% else %}
                <div class="bg-light p-4 mt-4 shadow">
                    No se encontro ninguna planificacion.
                </div>
            {% endif %}

        </div>
    </div>

{% endblock %}

