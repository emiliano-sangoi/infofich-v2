<div>
    <div class="mb-4">        
        <h4 class="font-weight-bold" id="resumen-temario">Temario</h4>                    
    </div>

    <div class="row">        
        <div class="col-sm-10">
             {#<label class="font-weight-bold">Temario</label>#}
            {% if resumen.temario is null %}
                    <div class="text-danger">{{ global_sd }}</div>
                {% else %}
                <ul>
                    {% for r in resumen.temario %}
                    <li>
                        <p>                      
                            <strong>Unidad </strong>{{ r.unidad }} <strong>{{ r.titulo }} </strong> {{ r.contenido|default(global_sd)}}  
                        </p>
                    </li>
                    {% endfor %}
                </ul>
                {% endif %}              
        </div>       
    </div>
    
    <div class="row mt-4">  
        <div class="col-sm-10 text-right">
            <a class="btn btn-outline-primary" href="{{ path('planif_temario_editar', {id : planificacion.id}) }}">Modificar</a>
            <hr class="mb-5 mt-4"/>
        </div>
    </div>

</div>