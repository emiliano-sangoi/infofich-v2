{% block planificacionesbundle_tema_widget %}
    <div class="mb-5">
        <div class="form-row">
            <div class="col-md-2">
                {{ form_label(form.unidad) }}
                {{ form_widget(form.unidad) }}
                {{ form_errors(form.unidad) }}
            </div>
            <div class="col-md-6">
                {{ form_label(form.titulo) }}            
                {{ form_widget(form.titulo) }}     
                {{ form_errors(form.titulo) }}
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-8">
                {{ form_label(form.contenido) }}            
                {{ form_widget(form.contenido) }}
                {{ form_errors(form.contenido) }}
            </div>
        </div>

        {{ form_row(form.posicion) }}


        <div class="form-row">
            <div class="form-group col-md-2 pl-0">
                <a href="#" class="collection-add btn btn-sm btn-primary ml-1" title="Agregar registro">
                    <i class="fa fa-plus"></i> Agregar
                </a>

            </div>
            <div class="col-md-6 text-right">                                
                <a href="#" class="collection-up btn btn-sm btn-outline-secondary">
                    <i class="fa fa-arrow-up"></i>
                </a>

                <a href="#" class="collection-down btn btn-sm btn-outline-secondary ml-1">
                    <i class="fa fa-arrow-down"></i>
                </a>

                <a href="#" class="collection-remove btn btn-sm btn-outline-danger ml-1" title="Borrar registro">
                    <i class="fa fa-trash"></i> Borrar
                </a>

                {{ form_widget(form.reset) }}


                {#<div class="col-md-1">
                    <a href="#" class="collection-duplicate btn btn-sm btn-primary">Duplicate</a>
                </div>#}
            </div>
        </div>  

     
    </div>         
{% endblock %}