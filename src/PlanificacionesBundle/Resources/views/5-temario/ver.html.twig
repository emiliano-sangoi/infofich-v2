{% set page_id = 5 %}

{% extends "PlanificacionesBundle::planif-base.html.twig" %}

{% block tab_content %}

    {% include "PlanificacionesBundle:5-temario:form.html.twig" %}

    <div class="form-row mt-5">
        <div class="form-group col-md-10">
            {% embed '::botonera.html.twig' %}

                {% block left %}
                    {% if planificacion.puedeEditarse() %}
                        <a href="{{ path('planif_temario_editar', { id : tema.id }) }}"
                           class="btn btn-success">
                            <i class="fa fa-edit"></i>&nbsp;Editar
                        </a>
                    {% endif %}
                {% endblock %}

                {% block right %}
                    {% if planificacion.puedeEditarse() %}
                        {{ form_start(delete_form) }}
                        <button role="submit" class="btn btn-danger confirmar-borrado"
                                data-msg='Â¿Esta seguro que desea borrar esta tema?'>
                            <i class="fa fa-trash"></i>&nbsp;Borrar
                        </button>
                        {{ form_end(delete_form) }}
                    {% endif %}

                    <a href="{{ path('planif_temario_index', { id: tema.planificacion.id }) }}"
                       class="btn btn-outline-secondary">
                        Ir a actividades
                    </a>
                {% endblock %}

            {% endembed %}
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    {{ parent() }}

{% endblock %}