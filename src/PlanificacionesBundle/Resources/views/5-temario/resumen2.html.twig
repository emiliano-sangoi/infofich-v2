{# Utilizado en la sección revisar #}
<div>

    <div class="row">        
        <div class="col-sm-10">
            {#<label class="font-weight-bold">Temario</label>#}           
            {% if resumen.temario[0] is not defined %}
                <p class="text-danger">
                    Sin definir.
                </p>
            {% else %}
                <ul>
                    {% for r in resumen.temario %}
                        <li>
                            <label class="font-weight-bold text-uppercase">                      
                                Unidad {{ r.unidad }}
                            </label>
                            <br/>
                            <label class="font-weight-bold">Título:</label>
                            <span>{{ r.titulo }}</span>
                            <br/>
                            <label class="font-weight-bold">
                                Contenido:
                            </label>
                            <p>
                                {{ r.contenido|nl2br}}
                            </p>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}              
        </div>       
    </div>    

    <div class="mt-4">          
        <a class="btn btn-outline-primary" href="{{ path('planif_temario_editar', {id : planificacion.id}) }}">
            <i class="fa fa-edit"></i>&nbsp;Modificar
        </a>                    
    </div>

</div>