                                data-live-search="true" 
                                data-live-search-style="begins" 
                                onclick="completar_datos_asignatura(this);" required>
                            <option value="">Seleccione</option>
                            <option value="1">Álgebra Lineal</option>
                            {#% for carrera in listadoCarreras %}
