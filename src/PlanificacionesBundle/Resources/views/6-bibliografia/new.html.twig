{% set page_id = 5 %}

{% extends "PlanificacionesBundle::planif-base.html.twig" %}

{% block tab_content %}

    {% embed "PlanificacionesBundle:6-bibliografia:form.html.twig" %}

        {% block form_actions %}
            {% if planificacion.puedeEditarse() %}
                <div class="form-row mt-3">
                    <div class="col-12 col-lg-8">
                        {{ form_widget(form.btnCrear) }}
                        {{ form_widget(form.btnCrearYContinuar) }}
                    </div>

                    <div class="col-12 col-lg-2 text-right">
                        <a href="{{ path('planif_bibliografia_index', { id: planificacion.id }) }}" class="btn btn-outline-secondary">
                            Ir al listado
                        </a>
                    </div>
                </div>
            {% endif %}

        {% endblock %}

    {% endembed %}

{% endblock %}


{% block javascripts %}
    {{ parent() }}

{% endblock %}