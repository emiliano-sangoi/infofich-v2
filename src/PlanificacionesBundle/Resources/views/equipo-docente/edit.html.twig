{% set page_id = 2 %}

{% extends "PlanificacionesBundle::planif-base.html.twig" %}

{% block tab_content %}
    <div class="bg-white">
        <div class="container" >
            <div class="card card-register mx-auto">

                <div class="card-body px-5">

                    {% include '::notificaciones.html.twig' %}

                    <div class="mb-4 ml-10">
                        <h4>Equipo Docente</h4>
                    </div>

                    {% include "PlanificacionesBundle:equipo-docente:form.html.twig" %}  

                </div>

            </div>
        </div>
    </div>
{% endblock %} 


{% block javascripts %}
    {{ parent() }}

    <script>

        $(document).ready(function () {

            $('.docentes-colaboradores-selector').collection({
                after_add: afterAddDocente
            });
            $('.docentes-adscriptos-selector').collection({
                after_add: afterAddDocente
            });

            var select = $('#docentes_docenteResponsable_nomape');

            // Instanciar select:
            select.select2({
                allowClear: true,
                containerCssClass: 'fix-select2-styles'
            });

            select.change(function (event) {
                var element = $(event.target);
                var pos = element.val();

                getDocente(pos, $('#docente_responsable'));

            });

            select.trigger('change');

        });
    </script>




{% endblock %} 