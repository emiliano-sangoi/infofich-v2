{# Utilizado en la sección revisar #}
<div>

    {# Solo mostrar si han cargado algo#}
    {% if resumen.ver_requisitos %}
        <div class="row">        
            <div class="col-12 col-md-3">
                <label class="font-weight-bold">Aprobaci&oacute;n</label>
            </div>
            <div class="col-12 col-md-8" >    
                <div class="row">        
                    <div class="col-12 col-md-4">
                        <label class="font-weight-bold">Asistencia</label>
                        <div class="" >                       
                            {{ resumen.porcentajeAsistencia|number_format}} {{ '%'|raw }} 

                        </div> 
                    </div>
                    <div class="col-12 col-md-4" >    

                        <label class="font-weight-bold">Primer parcial</label>
                        <div class="" >                        
                            {% if resumen.fechaPrimerParcial is null %}                               
                                <span class="text-muted">Sin definir.</span>                               
                            {% else %}
                                {{ resumen.fechaPrimerParcial|date("d/m/Y") }}
                            {% endif %}  
                        </div> 

                    </div> 

                    <div class="col-12 col-md-4" >    
                        <label class="font-weight-bold">Segundo parcial</label>
                        <div class="" >                        
                            {% if resumen.fechaSegundoParcial is null %}                               
                                <span class="text-muted">Sin definir.</span>                               
                            {% else %}
                                {{ resumen.fechaSegundoParcial|date("d/m/Y") }}
                            {% endif %}                              
                        </div> 
                    </div> 
                </div>
                <div class="row mt-4">
                    <div class="col-12 offset-md-4 col-md-4" >    
                        <label class="font-weight-bold">Recuperatorio 1er. parcial</label>                       

                        <div class="" >   
                            {% if resumen.fechaRecupPrimerParcial is null %}                               
                                <span class="text-muted">Sin definir.</span>                               
                            {% else %}

                                {{ resumen.fechaRecupPrimerParcial|date("d/m/Y") }}

                            {% endif %}     
                        </div>

                    </div> 
                    <div class="col-12 col-md-4" >    
                        <label class="font-weight-bold">Recuperatorio 2do. parcial</label>
                        <div class="" >   
                            {% if resumen.fechaRecupSegundoParcial is null %}                               
                                <span class="text-muted">Sin definir.</span>                               
                            {% else %}
                                {{ resumen.fechaRecupSegundoParcial|date("d/m/Y") }}
                            {% endif %}                         
                        </div>
                    </div> 
                </div>
            </div>
        </div>

        <div class="row mt-5">        
            <div class="col-12 col-md-3">
                <label class="font-weight-bold">Promoci&oacute;n</label>
            </div>
            <div class="col-12 col-md-8" >    
                <div class="row">        
                    <div class="col-12 col-md-4">
                        <label class="font-weight-bold">¿Prevé promoción teor&iacute;a?</label>
                        <div class="" >                        
                            {{ resumen.prevePromParcialTeoria|default(global_sd) }}
                        </div> 
                    </div>               
                    <div class="col-12 col-md-4">
                        <label class="font-weight-bold">¿Prevé promoción pr&aacute;ctica?</label>
                        <div class="" >                        
                            {{ resumen.prevePromParcialPractica|default(global_sd) }}
                        </div> 
                    </div>               
                </div>                        
            </div>
        </div>


        <div class="row mt-5">        
            <div class="col-12 col-md-3">
                <label class="font-weight-bold">Coloquio final integrador (CFI)</label>
            </div>
            <div class="col-12 col-md-8" >    
                <div class="row">        
                    <div class="col-12 col-md-4" >    
                        <label class="font-weight-bold">¿Prevé <span title='Coloquio final integrador'>CFI</span>?</label>
                        <div class="" >                        
                            {{ resumen.preveCfi|default(global_sd) }}
                        </div> 
                    </div> 
                    <div class="col-12 col-md-4" >    
                        <label class="font-weight-bold">Fecha integrador</label>
                        <div class="" >                        
                            {% if resumen.fechaParcialCfi is null %}                               
                                <span class="text-muted">Sin definir.</span>                               
                            {% else %}
                                {{ resumen.fechaParcialCfi|date("d/m/Y") }}
                            {% endif %}  
                        </div> 
                    </div> 
                    <div class="col-12 col-md-4" >    
                        <label class="font-weight-bold">Fecha recuperatorio</label>
                        <div class="" >     
                            {% if resumen.fechaRecupCfi is null %}                               
                                <span class="text-muted">Sin definir.</span>                               
                            {% else %}
                                {{ resumen.fechaRecupCfi|date("d/m/Y") }}
                            {% endif %}  

                        </div> 
                    </div> 
                    <div class="col-12 col-md-4 mt-md-4" >    
                        <label class="font-weight-bold">Modalidad CFI</label>
                        <div class="" >
                            {{ resumen.modalidadCfi|default(global_sd) }}                        
                        </div> 
                    </div> 
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-12 col-md-3">
                <label class="font-weight-bold">Modalidad ex&aacute;men final</label>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-12" >    
                <div class="row">   
                    <div class="col-2 col-md-2">    
                        <label class="font-weight-bold">Regulares</label>
                    </div>
                    <div class="col-10 col-md-10" >
                        {{ resumen.examenFinalModalidadRegulares|default(global_sd) }}                        
                    </div> 
                </div>

                <div class="row mt-2">  
                    <div class="col-2 col-md-2" >    
                        <label class="font-weight-bold">Libres</label>
                    </div>
                    <div class="col-10 col-md-10" >
                        {{ resumen.examenFinalModalidadLibres|default(global_sd) }}                        
                    </div> 
                </div> 
            </div> 
        </div>
    {% endif %}


    <div class="mt-4">          
        <a class="btn btn-outline-primary" href="{{ path('planif_aprobacion_editar', {id : planificacion.id}) }}">
            <i class="fa fa-edit"></i>&nbsp;Modificar
        </a>                    
    </div>


    {#{dump(resumen) }#}
</div>