<div>
    <div class="mb-4">        
        <h4 class="font-weight-bold" id="resumen-resultados-asignatura">Resultados de Aprendizaje</h4>                    
    </div>

    {#{ dump(resumen.resultados)}#}

    <div class="row">        
        <div class="col-sm-10">
            {% if resumen.resultados is null %}
                    <div class="text-danger">{{ "Sin definir"  }}</div>
                {% else %}
                 <ul>
                    {% for r in resumen.resultados %}
                    <li>
                        <p>                        
                            {{ r.resultado }}
                        </p>
                    </li>
                    {% endfor %}
                </ul>
                {% endif %}              
        </div>       
    </div>


    <div class="row mt-4">  
        <div class="col-sm-10 text-right">
            <a class="btn btn-outline-primary" href="{{ path('planif_resultados_editar', {id : planificacion.id}) }}">Modificar</a>
            <hr class="mb-5 mt-4"/>
        </div>
    </div>
</div>