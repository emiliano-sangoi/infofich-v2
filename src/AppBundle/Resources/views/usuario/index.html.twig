{% extends '::base.html.twig' %}

{% block navbar2 %}     
    {% embed 'navbar2.html.twig' %}    
        {% block navbar2_actions %}
            <a href="{{ path('usuarios_new') }}" class="">
                Nuevo usuario
            </a>
        {% endblock %}
    {% endembed %}
{% endblock %}  



{% block content %}

    <div class="px-lg-5">

        <div class="my-3">
            {% include '::notificaciones.html.twig' %}
        </div>

        <div class="bg-light">


            {% if usuarios[0] is defined %}
                <div class="table-responsive">
                    <table class="table table-condensed mb-0">
                        <thead class="bg-gray-400">
                            <tr>
                                <th>#</th>
                                <th>Nombre de usuario</th>
                                <th>Apellido y nombre</th>                                                                                                                      
                                <th>Correo electr√≥nico</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for usuario in usuarios %}
                                <tr>
                                    <td>
                                        {{ loop.index }}
                                    </td>
                                    <td>{{ usuario.username }}</td>
                                    <td>{{ usuario.persona }}</td>                                                           
                                    <td>{{ usuario.persona.email }}</td>
                                    <td>
                                        <a class="btn btn-sm btn-outline-secondary" href="{{ path('usuarios_show', { 'id': usuario.id }) }}">Ver</a>
                                        <a class="btn btn-sm btn-outline-secondary" href="{{ path('usuarios_edit', { 'id': usuario.id }) }}">Editar</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <div class="navigation my-4 centrate-x">                        
                    {{ knp_pagination_render(usuarios) }}
                </div>

            </div>
        </div>

    {% else %}

    {% endif %}

{% endblock %}
