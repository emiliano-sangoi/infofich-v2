{{ form_start(form) }}

{#{{ dump(form) }}#}
<div class="bg-light p-5">
    <div>
        {{ form_errors(form) }}
    </div>

    <div class="form-row">   
        <div class="col-5">
            {{ form_label(form.nombre) }}
            {{ form_widget(form.nombre) }}
            {{ form_errors(form.nombre) }}      
        </div>

        <div class="col-7">
            {{ form_label(form.titulo) }}
            {{ form_widget(form.titulo) }}
            {{ form_errors(form.titulo) }}      
        </div>
    </div>

    <div class="form-row">
        <div class="col-12">
            {{ form_label(form.descripcion) }}
            {{ form_widget(form.descripcion) }}
            {{ form_errors(form.descripcion) }}      
        </div>
    </div>

    <div class="row mb-0">   
        <div class="col-12">
            {{ form_label(form.permisos) }}
            {% for child in form.permisos %}
                <div>
                    {{ form_widget(child) }}
                    {{ form_label(child, null) }}
                </div>
                {{ form_errors(form.permisos) }}   
            {% endfor %}
        </div>
    </div>        


</div>    


{{ form_end(form) }}