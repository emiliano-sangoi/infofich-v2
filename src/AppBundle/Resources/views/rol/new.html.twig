{% extends 'base.html.twig' %}

{% block navbar2 %}     
    {% embed 'navbar2.html.twig' %}         
        {% block navbar2_actions %}          
            <a href="{{ path('rol_index') }}">
                <i class="fa fa-arrow-left"></i>&nbsp;&nbsp;Volver al listado
            </a>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}
    <div class="">
        <div class="px-lg-5">

            <div class="my-3">
                {% include '::notificaciones.html.twig' %}
            </div>

            <div class="">
                {% include 'AppBundle:rol:form.html.twig' %}

                {% embed '::botonera.html.twig' %}

                    {% block left %}
                        <input type="submit" id="crearRol" value="Crear rol" class="btn btn-primary" />
                    {% endblock %}                            
                    {% block right %}
                        <a href="{{ path('rol_index') }}" class="btn btn-outline-secondary">Cancelar</a>
                    {% endblock %}

                {% endembed %}
            </div>
        </div>
    </div>
{% endblock %}


{% block javascripts %}

    {{ parent() }}

    <script>
        $(document).ready(function () {
            $(document).ready(function () {
                $('#crearRol').click(function (e) {
                    e.preventDefault();
                    $("form[name='appbundle_rol']").submit();
                });
            });
        });

    </script>

{% endblock %}