                                        <span class='mr-2 text-uppercase badge badge-{{ class }}' style='cursor:default;'>
                                            {{ eActual.nombre }}
                                        </span>
                                    {% endif %}
                                </td>
                               

{#                                <td>#}
{#                                    {{ reserva.cantidadPersonas }}#}
