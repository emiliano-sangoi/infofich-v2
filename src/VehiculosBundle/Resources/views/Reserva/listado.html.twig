                                    </a>
                                    {% if app.user.tieneRol(ROL_SI) %}
                                    <a href="{{ path('reservas_edit', { 'id': reserva.id }) }}"
                                           class="btn btn-sm btn-outline-secondary d-inline-block">
                                            <i class="fa fa-edit"></i>
                                    </a>
