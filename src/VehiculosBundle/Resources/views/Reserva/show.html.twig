                    <i class="fa fa-edit"></i>&nbsp;Editar
                </a>
                <a href="{{ path('vehiculos_listado') }}" class="btn btn-secondary">
                    Volver al listado
                </a>
            {% endblock %}

            {% block right %}
                {#{ form_start(delete_form) }#}
                <button role="submit" class="btn btn-danger confirmar-borrado"
                        data-msg='¿Esta seguro que desea borrar el vehiculo <b>{#{ docenteAdscripto.persona }#}</b>?'>
                    <i class="fa fa-trash"></i>&nbsp;Borrar
                </button>
                {#{ form_end(delete_form) }#}
            {% endblock %}

        {% endembed %}

    </div>

{% endblock %}
