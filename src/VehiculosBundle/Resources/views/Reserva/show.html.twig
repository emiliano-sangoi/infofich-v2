{% extends '::base.html.twig' %}

{% set full_width = false %}

{% block navbar2 %}
    {% embed 'navbar2.html.twig' %}
        {% block navbar2_actions %}
            <a href="{{ path('reservas_listado') }}" class="">
                <i class="fa fa-arrow-left"></i>&nbsp;&nbsp;
                Volver
            </a>
        {% endblock %}
    {% endembed %}
{% endblock %}


{% block content %}

    <div class="pb-5">

        <div class="my-3">
            {% include '::notificaciones.html.twig' %}
        </div>

        <h2 class="font-weight-bold text-primary">
            {{ reserva }}
        </h2>
        <hr class="mt-0 border-primary mb-2 mb-lg-3" style="border-width: 2px;"/>

        {% include 'VehiculosBundle:Reserva:form.html.twig' %}


        {% embed '::botonera.html.twig' %}

            {% block left %}
                <a href="{{ path('reservas_edit', { 'id': 1}) }}" class="btn btn-primary">
                    <i class="fa fa-edit"></i>&nbsp;Editar
                </a>
                <a href="{{ path('reservas_listado') }}" class="btn btn-secondary">
                    Volver al listado
                </a>
            {% endblock %}

            {% block right %}
                {{ form_start(delete_form) }}
                    <button role="submit" class="btn btn-danger confirmar-borrado"
                            data-msg='Â¿Esta seguro que desea borrar la reserva <b>{{ reserva }}</b>?'>
                        <i class="fa fa-trash"></i>&nbsp;Borrar
                    </button>
                {{ form_end(delete_form) }}
            {% endblock %}

        {% endembed %}

    </div>

{% endblock %}
